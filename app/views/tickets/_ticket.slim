
ticket[aria-labelledby="question-title-81614"]
  div
    div[class="flex space-x-3"]
      div[class="flex-shrink-0"]
        img[class="h-10 w-10 rounded-full" src="https://cdn.jsdelivr.net/gh/Symplifica/assets/admin/assets/img/user-circle-green.png" alt=""]
      div[class="min-w-0 flex-1"]
        p[class="text-sm font-medium text-gray-900"]
          a[href="#" class="hover:underline"]
            = ticket.name
            br
            = ticket.email
            br
            = ticket.phone_number
        p[class="text-sm text-gray-500"]
          a[href="#" class="hover:underline"]= ticket.created_at.strftime("%m/%d/%Y")
      div[class="flex-shrink-0 self-center flex"]
        div[x-data="{ open: false }" @keydown.window.escape="open = false" @click.away="open = false" class="relative inline-block text-left"]
          div
            button[type="button" class="-m-2 p-2 rounded-full flex items-center text-gray-400 hover:text-gray-600" id="options-menu-0" @click="open = !open" aria-haspopup="true" x-bind:aria-expanded="open"]
              span[class="sr-only"]Open options
              svg[class="h-5 w-5" x-description="Heroicon name: solid/dots-vertical" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"]
                path[d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"]
          div[x-show="open" x-description="Dropdown menu, show/hide based on menu state." x-transition:enter="transition ease-out duration-100" x-transition:enter-start="transform opacity-0 scale-95" x-transition:enter-end="transform opacity-100 scale-100" x-transition:leave="transition ease-in duration-75" x-transition:leave-start="transform opacity-100 scale-100" x-transition:leave-end="transform opacity-0 scale-95" class="origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="options-menu-0" style="display: none;"]
            div[class="py-1"]
              = link_to ticket, class: "flex px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" do
                svg[class="mr-3 h-5 w-5 text-gray-400" x-description="Heroicon name: solid/star" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"]
                  path[d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"]
                span Mostrar Ticket
              = link_to edit_ticket_path(ticket), class: "flex px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" do
                svg[class="mr-3 h-5 w-5 text-gray-400" x-description="Heroicon name: solid/code" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"]
                  path[fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"]
                span Editar
              = link_to ticket, data: { confirm: 'Seguro?' }, method: :delete, class: "flex px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" do
                svg[class="mr-3 h-5 w-5 text-gray-400" x-description="Heroicon name: solid/flag" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"]
                  path[fill-rule="evenodd" d="M3 6a3 3 0 013-3h10a1 1 0 01.8 1.6L14.25 8l2.55 3.4A1 1 0 0116 13H6a1 1 0 00-1 1v3a1 1 0 11-2 0V6z" clip-rule="evenodd"]
                span Eliminar
    h2[id="question-title-81614" class="mt-4 text-base font-medium text-gray-900"]
      - unless ticket.agent.nil?
        .inline-flex.items-baseline.rounded-full.text-sm.font-medium.bg-yellow-100.text-yellow-800.md:mt-2.lg:mt-0 class=("px-2.5 py-0.5")
          i.fal.fa-user.mr-2
          =< ticket.agent.name
      - unless ticket.area.nil?
        .ml-3.inline-flex.items-baseline.rounded-full.text-sm.font-medium.bg-green-100.text-green-800.md:mt-2.lg:mt-0 class=("px-2.5 py-0.5")
          =ticket.area.name
      - unless ticket.category.nil?
        .ml-3.inline-flex.items-baseline.rounded-full.text-sm.font-medium.bg-blue-100.text-blue-800.md:mt-2.lg:mt-0 class=("px-2.5 py-0.5")
          = ticket.category.name
  div[class="mt-2 text-sm text-gray-700 space-y-4"]
    = ticket.details
  /div[class="mt-6 flex justify-between space-x-8"]
    div[class="flex space-x-6"]
      span[class="inline-flex items-center text-sm"]
        button[class="inline-flex space-x-2 text-gray-400 hover:text-gray-500"]
          svg[class="h-5 w-5" x-description="Heroicon name: solid/thumb-up" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"]
            path[d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z"]</path>
      / span[class="font-medium text-gray-900"]29
      / span[class="sr-only"]likes
      / span[class="inline-flex items-center text-sm"]
      /   button[class="inline-flex space-x-2 text-gray-400 hover:text-gray-500"]
      /     svg[class="h-5 w-5" x-description="Heroicon name: solid/chat-alt" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"]
      /       path[fill-rule="evenodd" d="M18 5v8a2 2 0 01-2 2h-5l-5 4v-4H4a2 2 0 01-2-2V5a2 2 0 012-2h12a2 2 0 012 2zM7 8H5v2h2V8zm2 0h2v2H9V8zm6 0h-2v2h2V8z" clip-rule="evenodd"]</path>
      /
      / span[class="font-medium text-gray-900"]= ticket.area
      / span[class="sr-only"]replies
